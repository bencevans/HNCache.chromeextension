{
  "name": "HNCache",
  "version": "0.1.2",
  "manifest_version": 2,
  "description": "Creates a link to a cached version of each item on Hacker News",
  "homepage_url": "http://hncache.bensbit.co.uk",
  "icons": {
    "128": "icon-128.png" ,
    "64": "icon-64.png" ,
    "48": "icon-48.png"
  },
  "content_scripts": [
    {
      "matches": ["http://news.ycombinator.com/", "http://news.ycombinator.com/news"],
      "js": ["jquery-1.7.2.min.js", "addlinks.js"]
    }
  ],
  "permissions": [
    "http://news.ycombinator.com/"
  ]
}
